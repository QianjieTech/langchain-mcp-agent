{
  "mcp_servers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "transport": "stdio",
      "auto_install": true,
      "timeout": 180
    },
    "fetch": {
      "command": "uvx", 
      "args": ["mcp-server-fetch"],
      "transport": "stdio",
      "auto_install": true
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Asia/Shanghai"],
      "transport": "stdio",
      "auto_install": true
    },
    "tavily-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp"
      ],
      "env": {
        "TAVILY_API_KEY": ""
      },
      "disabled": false,
      "autoApprove": [],
      "auto_install":true
    },
      "bingcn": {
        "command": "npx",
        "args": [
          "bing-cn-mcp"
      ]
    },
      "arxiv-mcp-server": {
      "command": "uv",
      "args": [
        "tool",
        "run",
        "arxiv-mcp-server",
        "--storage-path", "/path/to/paper/storage"
            ]
        }
    }    
}